<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
x:Class="Tresa.Views.Pages.SettingsPage"
xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:vm="clr-namespace:Tresa.ViewModels"
Title="Settings">


    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label Text="Edge Sensitivity" FontAttributes="Bold" />
            <Slider Minimum="0" Maximum="1" Value="{Binding Settings.EdgeSensitivity}" />
            <Label Text="{Binding Settings.EdgeSensitivity, StringFormat='Current: {0:F2}'}" />


            <Label Text="Color Mode" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding ColorModes}" SelectedItem="{Binding Settings.ColorMode}" />


            <Label Text="Export Format" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding ExportFormats}" SelectedItem="{Binding Settings.ExportFormat}" />


            <Button Text="Save" Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>