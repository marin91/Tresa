<ContentPage
    x:Class="Tresa.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="Black">

    <Grid>
        <toolkit:CameraView x:Name="Camera"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill" />

        <HorizontalStackLayout Padding="12" Spacing="12"
                               VerticalOptions="End"
                               BackgroundColor="#66000000">
            <Button Text="Start" Clicked="OnStart"/>
            <Button Text="Stop"  Clicked="OnStop"/>
            <Button Text="Flip"  Clicked="OnFlip"/>
            <Button Text="Torch" Clicked="OnTorch"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
