<Shell
    x:Class="Tresa.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Tresa.Views.Pages">

    <ShellContent Route="main"     Title="Tresa" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Route="settings"               ContentTemplate="{DataTemplate views:SettingsPage}" />
    <ShellContent Route="gallery"                ContentTemplate="{DataTemplate views:GalleryPage}" />
</Shell>